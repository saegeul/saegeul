	<column name="file_type" type="varchar" size="30" />
	<column name="down_cnt" type="int" size="11" default="0" not_null="true"/>
	<column name="dir_down" type="varchar" size="1" default="Y" not_null="true"/>
	<column name="upload_file_name" type="varchar" size="250" />
	<column name="source_file_name" type="varchar" size="250" />
	<column name="file_size" type="int" size="11" default="0" not_null="true"/>
	<column name="tag" type="varchar" size="255" />
	<column name="isvalid" type="varchar" size="11" default="Y" not_null="true"/>
	<column name="reg_date" type="date" />
	<column name="ip_address" type="varchar" size="128" />
    <column name="username" type="varchar" size="50"   not_null="true"/>
